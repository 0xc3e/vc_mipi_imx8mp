+++ b/arch/arm64/boot/dts/freescale/imx8mp.dtsi
@@ -1764,7 +1764,7 @@
 					compatible = "fsl,imx8mp-isi", "fsl,imx8mn-isi";
 					reg = <0x32e00000 0x2000>;
 					interrupts = <GIC_SPI 16 IRQ_TYPE_LEVEL_HIGH>;

 						 <&clk IMX8MP_CLK_MEDIA_APB>,
 						 <&clk IMX8MP_CLK_MEDIA_AXI_ROOT>,
@@ -1793,7 +1793,7 @@
 					compatible = "fsl,imx8mp-isi", "fsl,imx8mn-isi";
 					reg = <0x32e02000 0x2000>;
 					interrupts = <GIC_SPI 42 IRQ_TYPE_LEVEL_HIGH>;
-					interface = <3 0 2>;
+					interface = <3 2>;
 					clocks = <&clk IMX8MP_CLK_MEDIA_AXI>,
